<gcds-header {{#if langSwapSlug}}lang-href="/{{langSwapSlug}}?lang={{langSwap}}"{{/if}} skip-to-href="#main-content">
    
    {{#if menuItems}}
    <gcds-top-nav slot="menu" label="Main menu" alignment="right">
        <gcds-nav-link href="/" slot="home">{{siteName}}</gcds-nav-link>
        {{#each menuItems}}
            {{#if children}}
                <gcds-nav-group  open-trigger="{{title.rendered}}" menu-label="{{title.rendered}}">
                    {{#each children}}
                        <gcds-nav-link href="{{url}}">{{title.rendered}}</gcds-nav-link>
                    {{/each}}
                </gcds-nav-group>
            {{else}}
                <gcds-nav-link href="{{url}}" {{#if (eq title.rendered ../page.title.rendered)}}current{{/if}}>{{title.rendered}}</gcds-nav-link>
            {{/if}}
        {{/each}}
    </gcds-top-nav>
    {{/if}}

    <gcds-breadcrumbs slot="breadcrumb">
    {{#unless isHome}}
        <gcds-breadcrumbs-item href="/">{{siteName}}</gcds-breadcrumbs-item>
    {{/unless}}
    </gcds-breadcrumbs>

</gcds-header>